
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 30

using namespace std;

struct vec{
	int v[MAX];
};

void cargarmatriz(vec M[MAX][MAX], int tam);
void mostrarmatriz(vec M[MAX][MAX], int tam);

void main()
{
	vec MAT[MAX][MAX];
	int n;
	do {
		cout<<"Ingressar el tamaÃ±o: ";
		cin>>n;
	}while ((n>MAX)||(n<=0));

	cargarmatriz(MAT,n);
	mostrarmatriz(MAT,n);
	getch();
}
void cargarmatriz(vec M[MAX][MAX], int tam)
{
	for (int i=0;i<tam;i++)
		for (int j=0;j<tam;j++)
			for(int k=0;k<tam;k++)
			{
				cout<<"M["<<i<<"]["<<j<<"].["<<k<<"]= ";
				cin >> M[i][j].v[k];
			}

}
void mostrarmatriz(vec M[MAX][MAX], int tam)
{
	for (int i=0;i<tam;i++)
		for (int j=0;j<tam;j++)
			for(int k=0;k<tam;k++)
			{
				cout<<"M["<<i<<"]["<<j<<"].["<<k<<"]= ";
				cout << M[i][j].v[k]<<endl;
			}
}


