{

}



float notaf::CalcularPromedio(float P1, float P2, float P3, float NP, float EF)

{

	int promedio;

	promedio=(((P1+P2+P3)/3)*0.4)+(NP*0.2)+(EF*0.4);

	return promedio;

}
